<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    android:background="@drawable/carte_visite"
    android:orientation="horizontal">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView

           android:id="@+id/coach_image"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:src="@drawable/logo4"
           android:layout_marginTop="51dp"
           android:layout_marginLeft="110dp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="1dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_coach"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/email_24"
            android:gravity="center"
            android:text="ahmed@gmail.com"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.187" />

        <TextView
            android:id="@+id/num_coach"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/phone_24"
            android:gravity="center"
            android:text="27069148"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.446" />

        <TextView
            android:id="@+id/loc_coach"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/location_on_24"
            android:gravity="center"
           android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:text="msaken"
            app:layout_constraintVertical_bias="0.704" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>